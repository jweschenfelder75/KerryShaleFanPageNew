@page "/News"
@using de.jweschenfelder.KSFP.Shared.Objects
@using de.jweschenfelder.KSFP.Web.Interfaces.BusinessLogic
@inject IGenericService<GalleryItemDto> GalleryService

<PageTitle>Kerry Shale Fanpage: News</PageTitle>

<div class="section mt-5 pt-4">
	<div class="container">
		<div class="row mb-4 align-items-center">
			<div class="col-lg-4">
				<h2 class="heading">News<span class="text-primary">.</span> </h2>
			</div>
			<div class="col-lg-4">
				<p class="text-black-50">
					Some news about Mr Shale.
				</p>
			</div>
		</div>

		<div class="row mb-5 justify-content-between">
			<div class="col-lg-6 text-black-100 order-lg-2">
				<p>
					<strong>BRETTCON: </strong>Celebrating the 40th Anniversary of Granada's Sherlock Holmes.<br />
					Organized and carried out by <a href="http://sherlockpodcast.com" target="_blank">The Jeremy Brett Sherlock Holmes Podcast</a>.<br /><br />
					<strong>
						Sat 25 May 2024, at 9:30 - 21:00
					</strong><br />
					Event location: Mayhew Theatre<br />
					Guildford County School<br />
					Farnham Road<br />
					Guildford<br />
					GU2 4LU<br />
					United Kingdom
				</p>
				<p class="mb-0 pb-0">
					Get Tickets: <a href="https://www.tickettailor.com/events/thejeremybrettsherlockholmespodcast/1108881" target="_blank">https://www.tickettailor.com/events/thejeremybrettsherlockholmespodcast/1108881</a> <br /><br />
					I would like to inform you about the entry prices beforehand because it is quite pricey: 
				</p>
				<ul class="mt-0 pt-0">
					<li>
						General Admission: <strong>£ 125.00</strong> &nbsp; (This ticket allows you access to the event, Q & A Panels, meet & greets, dinner, and the screening.)
					</li>
					<li>
						VIP Entry: <strong>£ 250.00</strong> &nbsp; (As well as entry to all activities, you will get priority seating, free merch and a special photo op.)
					</li>
					<li>
						Photo sessions: £ 5.00 to £ 10.00.
					</li>
				</ul>
				<p>
					More information: <a href="http://sherlockpodcast.com/index.php/2024/02/16/brettcon" target="_blank">http://sherlockpodcast.com/index.php/2024/02/16/brettcon</a>
				</p>
				<p>
					Our Kerry Shale will not be there as it seems, but maybe you have an interest in it. <br />Kerry Shale had played in the episode "The Red Circle", he is part of that TV series.
				</p>
			</div>
			<div class="col-lg-5 ps-lg-4 float-start">
				<img src="images/BrettCon.jpg" alt="Image" class="img-fluid rounded-3">
			</div>
		</div>

		<div class="section py-0">
			<div class="container">
				<div class="row justify-content-between">
					<div class="col-lg-5 text-black-100">
						<p>
							BRETTCON: 40th Anniversary of Sherlock Holmes (Granada TV) trailer:
						</p>
						<p>
							<iframe width="480" height="270" src="https://www.youtube-nocookie.com/embed/9SBj8CU7etM?si=qgsV_1qZ3zxyDZE8"
									title="YouTube video player" frameborder="0" allow="accelerometer; encrypted-media; gyroscope; picture-in-picture; web-share"
									allowfullscreen class="rounded-3"></iframe>
						</p>
					</div>
					<div class="col-lg-5 text-black-100">
						<p>
							"Sherlock Holmes" intro:
						</p>
						<p>
							<iframe width="480" height="270" src="https://www.youtube-nocookie.com/embed/34sPW1azwOo?si=TJdkc9xo7FPEqmJB"
									title="YouTube video player" frameborder="0" allow="accelerometer; encrypted-media; gyroscope; picture-in-picture; web-share"
									allowfullscreen class="rounded-3"></iframe>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
